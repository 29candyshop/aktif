	<icon src="/resources/icons/icon@2x.png" width="114" height="114" />
	

	
	<gap:splash src="/resources/loading/Default.png" width="320" height="480" />
	<gap:splash src="/resources/loading/Default@2x.png" width="640" height="960" />
